<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="tests/bootstrap.php" colors="true">
	<testsuites>
		<testsuite name="Tests">
			<directory>tests</directory>
		</testsuite>
	</testsuites>

	<php>
		<env name="JSTATS_DB_HOST" value="localhost" />
		<env name="JSTATS_DB_USER" value="root" />
		<env name="JSTATS_DB_PASSWORD" value="" />
		<env name="JSTATS_DB_DATABASE" value="joomla_stats_server" />
		<env name="JSTATS_DB_PREFIX" value="jstats_" />
	</php>

	<filter>
		<whitelist addUncoveredFilesFromWhitelist="true">
			<directory suffix=".php">src</directory>
		</whitelist>
	</filter>
</phpunit>
