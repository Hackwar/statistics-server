{
    "name": "joomla/statistics-server",
    "type": "project",
    "description": "Joomla Stats Collection Server",
    "keywords": ["joomla"],
    "homepage": "http://github.com/joomla/statistics-server",
    "license": "GPL-2.0+",
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "ext-pdo": "*",
        "joomla/application": "~2.0@dev",
        "joomla/controller": "~2.0@dev",
        "joomla/database": "~2.0@dev",
        "joomla/event": "~2.0@dev",
        "joomla/di": "~2.0@dev",
        "joomla/github": "~2.0@dev",
        "joomla/input": "~2.0@dev",
        "joomla/model": "~2.0@dev",
        "joomla/registry": "~2.0@dev",
        "joomla/router": "~2.0@dev",
        "joomla/uri": "~2.0@dev",
        "joomla/view": "~2.0@dev",
        "league/flysystem": "^1.0.50",
        "monolog/monolog": "^1.24",
        "psr/log": "~1.0",
        "ramsey/uuid": "^3.8",
        "theiconic/php-ga-measurement-protocol": "^2.7.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.14.2",
        "joomla/coding-standards": "dev-master",
        "phpunit/phpunit": "^7.5.6"
    },
    "autoload": {
        "psr-4": {
            "Joomla\\StatsServer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Joomla\\StatsServer\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "*",
        "symfony/polyfill-php55": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php72": "*"
    },
    "config": {
        "platform": {
            "php": "7.2.12"
        }
    }
}
