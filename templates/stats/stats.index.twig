{% extends "index.twig" %}

{% block headerCSS %}
{% endblock %}

{% block content %}

    <h2>{{ "Stats" }}</h2>

    <table class="table table-bordered table-hover">
        <tr>
            <th>{{ "Unique ID" }}</th>
            <th>{{ "ID" }}</th>
        </tr>
        {% for u in items %}
            <tr>
                <td><a href="{{ uri.base.path }}user/{{ u.id }}">{{ u.unique_id }}</a></td>
                <td>{{ u.id }}</td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}
