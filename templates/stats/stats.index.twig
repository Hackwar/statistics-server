{% extends "index.twig" %}

{% block headerCSS %}
{% endblock %}

{% block content %}

    <h2>{{ "Stats" }}</h2>

    <div id="chartCanvas" style="width:400px;height:400px"></div>

{% endblock %}

{% block footerJS %}
<script type="text/javascript">
    jQuery(document).ready(function($){
        var chart = new CanvasJS.Chart("chartCanvas", {
            title: {
                text: "Installed Joomla! Versions"
            },
            data: [{
                type: "doughnut",
                dataPoints: [
{% for point in data.cms_version %}
                    {
                        y: {{ point.count }},
                        indexLabel: '{{ point.name }}'
                    },
{% endfor %}
                ]
            }]
        });

        chart.render();
    });
</script>
{% endblock %}